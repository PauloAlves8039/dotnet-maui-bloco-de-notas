<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlocoDeNotas.App.AboutPage"
             Title="Sobre">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="dotnet_bot.png" HeightRequest="64"/>
            <Label FontSize="22" FontAttributes="Bold" Text="Bloco de notas" VerticalOptions="End"/>
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>

        <Label Text="Este app tem como objetivo simular um bloco de notas no qual você poderá anotar tudo o que quiser." />
        <Button x:Name="btnSobre" Text="Saiba mais sobre o author..." Clicked="btnSobre_Clicked" />
    </VerticalStackLayout>
</ContentPage>